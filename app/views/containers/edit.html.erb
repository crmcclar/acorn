<h1>Edit your container</h1>

<%= form_for :container, url: container_path(@container), method: :patch do |f| %>

	<% if @container.errors.any? %>
		<div id="error_explanation">
			<h2>
				<%= pluralize(@container.errors.count, "error") %> prohibited this container from being saved:
			</h2>
			<ul>
				<% @container.errors.full_messages.each do |msg| %><li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<p> 
		<%= f.label :title %><br>
		<%= f.text_field :title %>
	</p>

	<p>
		<%= f.label :text %><br>
		<%= f.text_area :text %>
	</p>

	<p>
		<%= f.label :category %><br>
		<%= f.text_field :category %>
	</p>

	<p>
		<%= f.submit %>
	</p>

	<% end %>

	<%= link_to "Back to Index", containers_path %>

