<h1>Notes on going places, doing things, eating stuff</h1>

<% @containers.each do |container| %>
	<!-- <p><%= container.id %></p> -->
	<h2>
		<%= link_to container.id.to_s + " - " + container.title, container_path(container) %>
	</h2>
<% end %>

<p>
	<%= link_to "New Container", new_container_path() %>
</p>



<p>
	<% if @category_present == true %>
		<%= link_to "All", containers_path() %>
	<% else %>
		<% @categories.each do |category| %>	
			<% if not category.nil? %>
				<%= link_to "Posts about #{category}", containers_path(category: category) %>
			<% else %>
				<%= link_to "Posts about absolutely nothing", containers_path(category: category) %>
			<% end %>
		<% end %>		
	<% end %>
</p> 














